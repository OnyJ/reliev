<!-- ========== MAIN ========== -->
<main id="content" role="main">
  <!-- Form -->
  <div class="d-flex align-items-center position-relative height-lg-100vh">
    <div class="col-lg-5 col-xl-4 d-none d-lg-flex align-items-center gradient-half-primary-v1 height-lg-100vh px-0">
      <div class="w-100 p-5">
      </div>
    </div>
    <div class="container">
      <div class="row no-gutters">
        <div class="col-md-8 col-lg-7 col-xl-6 offset-md-2 offset-lg-2 offset-xl-3 space-3 space-lg-0">
                        <!-- Title -->
            <div class="mb-7">
              <h1 class="h3 text-primary font-weight-normal mb-0">Bienvenu sur <span class="font-weight-semi-bold">Reliev</span></h1>
              <p>Quand travailler est un plaisir.</p>
            </div>
            <!-- End Title -->
            <!-- Title -->
            <div class="mb-7">
              <h1 class="h3 font-weight-normal mb-0">Choisissez un mot de passe pour commencer.</h1>
            </div>
            <!-- End Title -->

            <!-- Form Group -->
            <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put }) do |f| %>
            <%= f.hidden_field :invitation_token, readonly: true %>
      
            <!-- Form Group -->
            <div class="js-form-message form-group">
              <% if f.object.class.require_password_on_accepting %>
              <div class="field">
                <%= f.label :mot_de_passe, class: "form-label" %>
                <%= f.password_field :password, class: "form-control", placeholder: "********", autocomplete: "new-password" %>
              </div>
            </div>
            <!-- End Form Group -->

            <!-- Form Group -->
            <div class="js-form-message form-group">   
              <div class="field">
                <%= f.label :confirmation_du_mot_de_passe, class: "form-label" %>
                <%= f.password_field :password_confirmation, class: "form-control", placeholder: "********", autocomplete: "new-password" %>
              </div>
            </div>
            <% end %>

            <!-- Button -->
            <div class="row mb-5">
              <div class="col-7 col-sm-6 ">
                <div class="actions">
                  <%= f.submit "S'inscrire", class: "btn btn-primary transition-3d-hover mt-2" %>
                </div>
              </div>
            </div>
            <!-- End Button -->
        </div>
      </div>
    </div>
  </div>
  <% end %>
  <!-- End Form -->
</main>
<!-- ========== END MAIN ========== -->
