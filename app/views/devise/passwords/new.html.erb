<!-- ========== MAIN ========== -->
<main id="content" role="main">
  <!-- Form -->
  <div class="d-flex align-items-center position-relative height-lg-100vh">
    <div class="col-lg-5 col-xl-4 d-none d-lg-flex align-items-center gradient-half-primary-v1 height-lg-100vh px-0">
      <div class="w-100 p-5">
      </div>
    </div>
    <div class="container">
      <div class="row no-gutters">
        <div class="col-md-8 col-lg-7 col-xl-6 offset-md-2 offset-lg-2 offset-xl-3 space-3 space-lg-0">
          <!-- Title -->
          <div class="mb-7">
            <h1 class="h3 text-primary font-weight-normal mb-0">Mot de passe perdu?</h1>
            <p>Entrez votre adresse e-mail ci-dessous et nous vous remettrons sur la bonne voie.</p>
          </div>
          <!-- End Title -->

          <!-- Form Group -->
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="js-form-message form-group">
            <div class="field">
              <%= f.label :email, class: "form-label"%>
              <%= f.email_field :email, class: "form-control", placeholder: "Adresse email", autofocus: true, autocomplete: "email" %>
            </div>
          </div>
          <!-- End Form Group -->

          <!-- Button -->
          <div class="row align-items-center mb-5">
            <div class="col-7 col-sm-6 text-right">
              <div class="actions">
                <%= f.submit "Envoyez-moi les instructions de rÃ©initialisation mot de passe", class: "btn btn-primary transition-3d-hover" %>
              </div>
            </div>
          </div>
          <!-- End Button -->

          <div class="col-5 col-sm-6">
              <%= link_to "S'inscrire", new_registration_path(resource_name), class: "small" %><br>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <!-- End Form -->
</main>
<!-- ========== END MAIN ========== -->


