<h2>Complétez votre profil pour effectuer une réservation</h2>

<%= form_with model: @employee_profile do |form| %>

  <div class="form-group mb-2">
    <%= form.text_field :first_name, class: 'form-control', placeholder: 'Prénom' %>
  </div>

  <div class="form-group">
    <%= form.text_field :last_name, class: 'form-control', placeholder: 'Nom' %>
  </div>

  <%= form.submit "Inscription", class: 'btn btn-success' %>
<% end %>