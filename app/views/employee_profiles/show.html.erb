<!-- ========== MAIN ========== -->
<main id="content" role="main">
  <!-- Breadcrumb Section -->
  <div class="bg-primary">
    <div class="container space-1">
      <div class="d-sm-flex justify-content-sm-between align-items-sm-center">
        <div class="mb-3 mb-sm-0">
          <!-- Breadcrumb -->
          <ol class="breadcrumb breadcrumb-white breadcrumb-no-gutter mb-0">
            <li class="breadcrumb-item">
              <%= link_to "Accueil", root_path, class: "breadcrumb-link" %>
            </li>
            <li class="breadcrumb-item">
              <%= link_to "Mon Profil", 'javascript:;', class: "breadcrumb-link" %>
            </li>
          </ol>
          <!-- End Breadcrumb -->
        </div>

        <!-- Profile buttons -->
        <div>
          <%= link_to "Editer mon profil", edit_employee_profile_path, class: "btn btn-sm btn-soft-white transition-3d-hover" %>
          <%= link_to "Se déconnecter", destroy_employee_session_path, method: :delete, class: "btn btn-sm btn-soft-white transition-3d-hover" %>
        </div>
        <!-- End Profile buttons -->

      </div>
    </div>
  </div>
  <!-- End Breadcrumb Section -->

  <!-- Content Section -->
  <div class="bg-light">
    <div class="container space-2">
      <div class="row">
        <!-- Aside cards -->
        <div class="col-lg-3 mb-7 mb-lg-0">
          <!-- Profile Card -->
          <div class="card p-1 mb-4">
            <div class="card-body text-center">
              <div class="mb-3 mt-3">
                <h1 class="h6 font-weight-medium mb-0"><%= @employee_profile.first_name %> <%= @employee_profile.last_name %></h1>
              </div>
            </div>
          </div>
          <!-- End Profile Card -->

          <!-- Profile informations -->
          <div class="card mb-4">
            <div class="card-header pt-4 pb-3 px-0 mx-4">
              <h3 class="h6 mb-0">Profil</h3>
            </div>

            <div class="card-body pt-3 pb-4 px-4">
              <!-- Profile information -->
              <div class="media">
                <span class="fas fa-envelope list-group-icon mr-3"></span>
                <div class="media-body text-lh-sm">
                  <span class="d-block mb-1">Email : <span class="text-secondary"><%= @employee_profile.employee.email %></span></span>
                </div>
              </div>
              <!-- End Profile information -->
            </div>            
          </div>
          <!-- End Profile informations -->

          <center>
            <%= link_to "Editer mon profil", edit_employee_profile_path %>
          </center>
        </div>
        <!-- End Aside cards -->

        <div class="col-lg-9">
          <!-- User Details -->
          <div class="mb-4">
            <h2 class="h4">Espace salarié</h2>
          </div>
          <!-- End User Details -->

          <!-- Info -->
          <div class="mb-4">
            <% if @employee_profile.first_name == nil %>
              <p>Vous n'avez pas encore précisé votre nom. <br/>Vous pouvez le faire via la rubrique 
                <%= link_to "Editer mon profil", edit_employee_profile_path %>
              </p>
            <% end %>
          </div>
          <!-- End Info -->

          <hr class="my-7">

          <h2 class="h4">Mes évènements : </h2>

          <hr class="my-7">

          <h2 class="h4">Évènements proposés par l'entreprise :</h2>

          <hr class="my-7">

        </div>
      </div>
    </div>
  </div>
  <!-- End Content Section -->
</main>
<!-- ========== END MAIN ========== -->
