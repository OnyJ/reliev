<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
        <br><br><br>
        <%= form_for [@company, @event], url: company_event_path(params[:id]), method: :put do |f| %>
        <%= render partial: "layouts/error", locals: { resource: @event } %>
        <h1 class="h3 mb-3 font-weight-normal text-center">Modifier mon évènement avec :<br> <strong><%= full_name(@masseur) %></strong></h1>
            <div class="field mt-5">
                <%= f.label :titre, "Intitulé de l'événement*", class:"form-label" %>
                <%= f.text_field :title, class: "form-control", placeholder: "Titre" %>
            </div> 
             <div class="field mt-5">
                <%= f.label :description, "Description*", class:"form-label" %>
                <%= f.text_area :description, class: "form-control", placeholder: "Description (20 caractères minimum)" %>
            </div>
            <div class="field mt-5">
                <%= f.label :nombre_de_participants, "Nombre maximum de participants*", class:"form-label" %>
                <%= f.text_field :maximum_number_of_participation, class: "form-control", placeholder: "Nombre maximum de participants" %>
            </div>

            <div class="row mt-5">
                <div class="col-sm-6 mb-3">
                    <div class="js-form-message">
                    <div class="dropdown">
                        <%= f.label :nombre_de_participants, "Créneau désiré*", class:"form-label" %>     
                        <div class="form-group">
                        <div>
                            <% @masseur.time_slots.each do |time_slot| %>                        
                                <%= f.check_box(:moment, {:multiple => true}, time_slot, nil) %> <small><%= time_slot %></small><br>
                            <% end %>
                        </div>
                        </div>
                    </div>
                    </div>
                </div>
            </div>
        
            <div class="actions mt-5">
                <%= f.submit "Modifier", class: "btn btn-lg btn-primary btn-block" %>
                <%= link_to 'Supprimer', company_event_path(current_company, params[:id]), class: "btn btn-danger btn-block", method: :delete, data: { confirm: 'Êtes-vous sûr?' } %> 
            </div>                
        <% end %>
    </div>
  </div>
</div>
