.jumbotron{
  height: 650px;
  background-position: bottom;
  background-size: cover;
}
.jumbo1{
  background-image: url(<%= asset_path 'jumbo1-bg.png' %>);
}
.jumbo2{
  background-image: url(<%= asset_path 'jumbo2-bg.png' %>);
}
.jumbo3{
  background-image: url(<%= asset_path 'welcome_page-bg.png' %>);
}


@media (max-width: 480px) {

  .jumbotron .btn {
    margin-top: 20px;
    color: white;
    background-color: #00c9a7;
  }

  .jumbotron-btn{
    margin-top: 10px;
  }
  
}


@media (min-width: 768px) {
  .jumbotron h1 {
    font-size: 4em;
    margin-left: 0
  }

  .jumbotron .btn {
    margin-left: 100px;
    margin-top: 60px;
  }
  
  .jumbotron-btn{
    margin-top: 200px;
  }
}

@media (min-width: 992px) {
  .jumbotron h1 {
    font-size: 6em;
    margin-left: 100px;
  }

  .jumbotron h3 {
    margin-left: 100px;
  }

  .jumbotron p {
    margin-left: 100px;
  }

  .jumbotron .btn {
    margin-left: 100px;
    margin-top: 60px;
  }

  .jumbotron-btn{
    margin-top: 0;
  }
}

@media (min-width: 1200px) {
  .jumbotron h1 {
    font-size: 8em;
    margin-left: 100px;
  }

  .jumbotron h3 {
    margin-left: 100px;
  }

  .jumbotron .btn {
    margin-left: 100px;
  }
}